# Пример файла конфигурации окружения
# Скопируйте этот файл в .env и настройте под свои нужды

# Директории
OUTPUT_DIR=data
LOGS_DIR=logs

# Настройки парсинга
REQUEST_DELAY_MIN=1
REQUEST_DELAY_MAX=3
RETRY_COUNT=3
TIMEOUT=30

# Настройки Selenium
SELENIUM_HEADLESS=true
SELENIUM_WINDOW_WIDTH=1920
SELENIUM_WINDOW_HEIGHT=1080

# Настройки параллельности
MAX_WORKERS=3
ENABLE_PARALLEL=false

# Уровень логирования (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Настройки прокси (опционально)
# HTTP_PROXY=http://proxy.example.com:8080
# HTTPS_PROXY=https://proxy.example.com:8080

# Пользовательский User-Agent (опционально)
# CUSTOM_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Настройки баз данных (для будущих версий)
# DATABASE_URL=sqlite:///gas_stations.db
# REDIS_URL=redis://localhost:6379

# Настройки уведомлений (для будущих версий)
# TELEGRAM_BOT_TOKEN=your_bot_token
# TELEGRAM_CHAT_ID=your_chat_id
# EMAIL_SMTP_SERVER=smtp.gmail.com
# EMAIL_USERNAME=your_email@gmail.com
# EMAIL_PASSWORD=your_app_password